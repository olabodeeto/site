---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 1);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-5xl font-bold">I'm Olabode Eto</div>
      <div class="text-3xl py-3 font-bold">Software Engineer and Entrepreneur</div>
      <div class="py-2">
        <text class="text-lg">
         I am a Software Engineer and ReactJs specialist with proven years of experience building and shipping scalable and beautiful applications.
          </text
        >
      </div>
      <div class="mt-8">
        <!-- <a class="btn" href="https://twitter.com/manuelernestog" target="_blank"> Let's connect!</a> -->
        <a href="https://twitter.com/codebreed" target="_blank" class="btn btn-outline ml-5"> Let's connect</a>
      </div>
    </div>

    <div>

      
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2 bg-[#55D687] text-white p-2">Projects</div>
    </div>

    <HorizontalCard
      title="Klasshour"
      img="/kh.png"
      desc="Klasshour is an instant out-of-classroom online edutech platform that connects students to solutions to classwork, and assignments, preparing students for internal and external exams through independent tutors scattered across the African continent."
      url="https://www.klasshour.com/"
      badge=""
    />
    <div class="divider my-0"></div>
    <br/>


    <HorizontalCard
      title="Qiid Commerce"
      img="/qiid.png"
      desc="An online market place"
      url="https://qiid.vercel.app/"
      badge=""
    />
    <div class="divider my-0"></div>
    <br/>
   


    <div>
      <div class="text-3xl w-full font-bold mb-2 bg-[#55D687] text-white p-2">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
